<?xml version="1.0" encoding="utf-8"?>

    <androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:aapt="http://schemas.android.com/aapt"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_80sdp"
        app:cardCornerRadius="10dp"
        android:layout_margin="10dp"
        android:backgroundTint="@color/full_black"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/rel_image"
                android:layout_width="80dp"
                android:layout_height="88dp"
                android:layout_margin="10dp"
                android:background="@drawable/a4_grad"
                android:backgroundTint="@color/charttextcolor"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/exersiceImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_centerVertical="true"

                    android:src="@drawable/easy" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:layout_toRightOf="@+id/rel_image">

                <RelativeLayout
                    android:layout_toLeftOf="@+id/rtrt1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp">

                    <TextView
                        android:id="@+id/exerciseName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/medium"
                        android:text="21354"
                        android:textColor="@color/white" />




                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rtrt1"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/dayname1"

                    android:layout_centerInParent="true"
                    android:layout_marginTop="5dp"
                    android:layout_margin="5dp"

                    android:background="@drawable/a2_grad">

                    <TextView
                        android:id="@+id/totalSet"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/semibold"
                        android:gravity="center"

                        android:text="1"
                        android:textColor="@color/white"
                        android:textSize="16dp" />
                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
